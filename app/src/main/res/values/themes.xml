<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YUMYUM" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">#AD9C9C9C</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#AD9C9C9C</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="Theme.YUMYUM.NoActionBar">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.YUMYUM.ActionBar">
        <item name="windowActionBar">true</item>
    </style>

    <style name="Theme.YUMYUM.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.YUMYUM.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.YUMYUM.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.YUMYUM.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.YUMYUM.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>