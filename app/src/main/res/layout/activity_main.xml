    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#000"
        android:textSize="43sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/nav_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />

    <LinearLayout
        android:id="@+id/main_btn"
        android:layout_marginHorizontal="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/nav_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.01999998">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_recipe"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:background="@drawable/main_button_pink"
                android:textSize="18sp"
                android:text="요리하기" />

            <Button
                android:id="@+id/btn_recipe_application"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:background="@drawable/main_button_orange"
                android:textSize="18sp"
                android:text="레시피 신청" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_ingredient_search"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:background="@drawable/main_button_orange"
                android:textSize="18sp"
                android:text="재료활용" />

            <Button
                android:id="@+id/btn_community"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:background="@drawable/main_button_pink"
                android:textSize="18sp"
                android:text="커뮤니티" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_list1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/nav_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_btn"
        app:layout_constraintVertical_bias="0.04">

        <TextView
            android:id="@+id/main_list1_title"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="인기 레시피"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/main_list1"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/food1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/border_img"
                            android:padding="5dp"
                            android:src="@drawable/food1" />

                        <ImageView
                            android:id="@+id/like_no1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|bottom"
                            android:layout_margin="5dp"
                            app:srcCompat="@drawable/grayheart" />

                        <ImageView
                            android:id="@+id/like_yes1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|bottom"
                            android:layout_margin="5dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/redheart" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/f1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="우니 덮밥"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/food2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/border_img"
                            android:padding="5dp"
                            android:src="@drawable/food2" />

                        <ImageView
                            android:id="@+id/like_no2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|bottom"
                            android:layout_margin="5dp"
                            app:srcCompat="@drawable/grayheart" />

                        <ImageView
                            android:id="@+id/like_yes2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|bottom"
                            android:layout_margin="5dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/redheart" />
                    </FrameLayout>


                    <TextView
                        android:id="@+id/f2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="국물 닭발"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/food3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/border_img"
                            android:padding="5dp"
                            android:src="@drawable/food3" />

                        <ImageView
                            android:id="@+id/like_no3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|bottom"
                            android:layout_margin="5dp"
                            app:srcCompat="@drawable/grayheart" />

                        <ImageView
                            android:id="@+id/like_yes3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|bottom"
                            android:layout_margin="5dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/redheart" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/f3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="베이글"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/food4"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/border_img"
                            android:padding="5dp"
                            android:src="@drawable/food4" />

                        <ImageView
                            android:id="@+id/like_no4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|bottom"
                            android:layout_margin="5dp"
                            app:srcCompat="@drawable/grayheart" />

                        <ImageView
                            android:id="@+id/like_yes4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|bottom"
                            android:layout_margin="5dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/redheart" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/f4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="계란튀김"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_list2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/nav_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_list1"
        app:layout_constraintVertical_bias="0.44">

        <TextView
            android:id="@+id/main_list2_title"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="내가 찜한 레시피"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/main_list2"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/food5"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/border_img"
                            android:padding="5dp"
                            android:src="@drawable/food5" />

                        <ImageView
                            android:id="@+id/like_no5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|bottom"
                            android:layout_margin="5dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/grayheart" />

                        <ImageView
                            android:id="@+id/like_yes5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|bottom"
                            android:layout_margin="5dp"
                            app:srcCompat="@drawable/redheart" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/f5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="미트볼"
                        android:textAlignment="center"
                        android:textColor="#000"

                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/food6"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/border_img"
                            android:padding="5dp"
                            android:src="@drawable/food6" />

                        <ImageView
                            android:id="@+id/like_no6"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|bottom"
                            android:layout_margin="5dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/grayheart" />

                        <ImageView
                            android:id="@+id/like_yes6"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|bottom"
                            android:layout_margin="5dp"
                            app:srcCompat="@drawable/redheart" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/f6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="닭발"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/food7"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/border_img"
                            android:padding="5dp"
                            android:src="@drawable/food7" />

                        <ImageView
                            android:id="@+id/like_no7"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|bottom"
                            android:layout_margin="5dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/grayheart" />

                        <ImageView
                            android:id="@+id/like_yes7"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|bottom"
                            android:layout_margin="5dp"
                            app:srcCompat="@drawable/redheart" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/f7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="버터쿠키"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>