<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.YUMYUM.ActionBar">
            <!--Toolbar-->

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="레시피 신청"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back" />
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                app:layout_constraintVertical_bias="0.0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="107dp"
                        android:layout_height="107dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/user" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="프로필 사진 선택하기"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/join_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="3dp"
                        android:text="이름"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/input_name"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/border_black"
                        android:hint="이름을 입력해주세요"
                        android:inputType="text"
                        android:paddingHorizontal="5dp"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/warning_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="2sp"
                        android:layout_marginLeft="5sp"
                        android:text="이름을 입력해주세요."
                        android:textColor="#C60000"
                        android:textSize="10sp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="3dp"
                        android:text="아이디"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/border_black"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5dp">

                        <EditText
                            android:id="@+id/editTextText"
                            android:layout_width="280dp"
                            android:layout_height="45dp"
                            android:hint="아이디를 입력해주세요"
                            android:inputType="text"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/button14"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:background="@drawable/main_list2"
                            android:text="중복확인" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="\n닉네임" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@drawable/border_black"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/input_nickname"
                            android:layout_width="280dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"

                            android:ems="10"
                            android:hint=" 2~10자 닉네임을 입력해주세요"
                            android:inputType="text"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/button13"
                            android:layout_width="match_parent"
                            android:layout_height="49dp"
                            android:text="중복확인" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/join_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="3dp"
                        android:text="비밀번호"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/input_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/border_black"
                        android:hint="비밀번호를 입력해주세요 (영문+숫자 7자 이상)"
                        android:inputType="text"
                        android:paddingHorizontal="5dp"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/warning_pwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="2sp"
                        android:layout_marginLeft="5sp"
                        android:text="비밀번호를 입력해주세요."
                        android:textColor="#C60000"
                        android:textSize="10sp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/join_pwd2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="3dp"
                        android:text="비밀번호 확인"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/input_pwd2"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/border_black"
                        android:hint="비밀번호를 한 번 더 입력해주세요"
                        android:inputType="text"
                        android:paddingHorizontal="5dp"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/warning_pwd2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="2sp"
                        android:layout_marginLeft="5sp"
                        android:text="비밀번호를 입력해주세요."
                        android:textColor="#C60000"
                        android:textSize="10sp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/text_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="\n휴대폰 번호" />

                    <LinearLayout
                        android:layout_width="356dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@drawable/border_black"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/input_phone"
                            android:layout_width="280dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/border_black"
                            android:ems="10"
                            android:hint=" 휴대폰 번호를 입력해주세요"
                            android:inputType="phone"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/button15"
                            android:layout_width="match_parent"
                            android:layout_height="49dp"
                            android:text="인증" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="\n이메일" />

                    <EditText
                        android:id="@+id/input_email"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/border_black"
                        android:ems="10"
                        android:hint=" 이메일을 입력해주세요"
                        android:inputType="textEmailAddress"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#feea83"
                    android:text="가입하기"
                    android:textColor="@color/black" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>