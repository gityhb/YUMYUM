<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="80dp"
        android:background="#fff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="5dp"
            android:background="#FFDDDD"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="italic"
                android:textSize="35sp"
                android:textColor="#000"
                android:text="@string/app_name" />

                <ImageView
                    android:id="@+id/cancel_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/cancel" />

            </LinearLayout>

            <TextView
                android:id="@+id/userNk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|end"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="로그인해주세요" />



        </LinearLayout>


            <TextView
                android:id="@+id/tite_recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="25sp"
                android:text="레시피" />
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginVertical="3dp"
            android:layout_marginHorizontal="7dp"
            android:background="#000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipe1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="레시피 검색" />

            <TextView
                android:id="@+id/recipe2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="재료 검색" />

            <TextView
                android:id="@+id/recipe3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="레시피 신청" />

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginVertical="3dp"
            android:layout_marginHorizontal="7dp"
            android:background="#000"/>



        <TextView
                android:id="@+id/title_community"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_margin="7dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="25sp"
                android:text="커뮤니티" />
        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginVertical="3dp"
            android:layout_marginHorizontal="7dp"
            android:background="#000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/community1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="글 목록" />

            <TextView
                android:id="@+id/community2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="글 쓰기" />

        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginVertical="3dp"
            android:layout_marginHorizontal="7dp"
            android:background="#000"/>

            <TextView
                android:id="@+id/title_my"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="25sp"
                android:text="내 정보" />
        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginVertical="3dp"
            android:layout_marginHorizontal="7dp"
            android:background="#000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="마이 페이지" />

            <TextView
                android:id="@+id/my2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="회원 정보 수정" />

        </LinearLayout>

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginVertical="3dp"
            android:layout_marginHorizontal="7dp"
            android:background="#000"/>


    </LinearLayout>

</FrameLayout>