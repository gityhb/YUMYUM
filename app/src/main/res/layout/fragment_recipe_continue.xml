<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeContinueFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.YUMYUM.ActionBar">
        <!--Toolbar-->

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#fff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/app_name"
                android:textColor="#000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/back" />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:layout_gravity="bottom"
            android:layout_marginLeft="25dp"
            android:text="No.2" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="end"
                android:text="09 : 30"
                android:textSize="40sp" />

            <View
                android:id="@+id/view"
                android:layout_width="150dp"
                android:layout_height="5dp"
                android:background="#FEE043"
                android:layout_marginLeft="172dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:background="@drawable/border_recipe_start1">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="190dp"
            android:layout_height="180dp"
            android:src="@drawable/recipe_continue_img" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="327dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="345dp"
        android:background="@drawable/border_recipe_start_button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/border_recipe_start1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="15dp"
                android:textColor="@color/black"
                android:text="면을 넣고 적당히 휘저으면서 12분간 삶는다." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/button10"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="@drawable/recipe_continue_button1"
                android:text="시작" />

            <Button
                android:id="@+id/button11"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="@drawable/recipe_continue_button2"
                android:text="중지" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="bottom|end">

            <Button
                android:id="@+id/button16"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="#00ff0000"
                android:text="넘어가기"
                android:textSize="17sp" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType = "centerCrop"
                android:padding = "6dp"
                android:background="#00ff0000"
                android:src="@drawable/recipe_continue_button_img" />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>