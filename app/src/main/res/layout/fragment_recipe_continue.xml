<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeContinueFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="27sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:layout_gravity="bottom"
            android:text="    No.2" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="   09 : 30"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/border_recipe_start1">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="50dp"
            android:layout_height="135dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/recipe_continue_img" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="345dp"
        android:background="@drawable/border_recipe_start_button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/border_recipe_start1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_margin="15dp"
                android:textColor="@color/black"
                android:text="면을 넣고 적당히 휘저으면서 12분간 삶는다." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/button10"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="@drawable/recipe_continue_button1"
                android:text="시작" />

            <Button
                android:id="@+id/button11"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="@drawable/recipe_continue_button2"
                android:text="중지" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:gravity="bottom|end">

            <Button
                android:id="@+id/button16"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="#00ff0000"
                android:text="넘어가기"
                android:textSize="17sp" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType = "centerCrop"
                android:padding = "6dp"
                android:background="#00ff0000"
                android:src="@drawable/recipe_continue_button_img" />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>